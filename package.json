{
  "version": "0.1.23",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --watch",
    "test-all": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "pub": "npm version patch --force && npm run prepare && npm publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "eslint-plugin-no-state-hooks",
  "author": "Grant Kiely",
  "module": "dist/eslint-plugin-no-state-hooks.esm.js",
  "exports": {
    ".": {
      "import": "./dist/eslint-plugin-no-state-hooks.esm.js",
      "require": "./dist/eslint-plugin-no-state-hooks.cjs.production.min.js"
    }
  },
  "size-limit": [
    {
      "path": "dist/eslint-plugin-no-state-hooks.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/eslint-plugin-no-state-hooks.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.0.1",
    "husky": "^8.0.1",
    "size-limit": "^8.0.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0"
  },
  "dependencies": {
    "@typescript-eslint/experimental-utils": "^5.36.1",
    "ts-pattern": "^4.0.5",
    "tsutils": "^3.21.0"
  },
  "peerDependencies": {
    "eslint": "^8.x",
    "@typescript-eslint/parser": "^5.x",
    "typescript": "^4.x"
  }
}
